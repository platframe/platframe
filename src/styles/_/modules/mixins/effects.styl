hr-gradient()
    clear: both
    width: 100%
    height: 1px
    border: none
    padding: 0
    // Mixins may be called with or without parenthesis, but for the
    // internal 'arguments' variable to pass the correctly formatted
    // arguments (thus, verbatim: including the commas) it needs to
    // be called (unambiguously) as a mixin, without the parenthesis.
    background: linear-gradient(arguments)

// EXAMPLE
// hr-gradient to right, rgba(0,0,0,.1), _65 50%, rgba(0,0,0,.1) 100%

hr-solid(color_1, color_2, height, margin...)
    // args: (#ccc, #fff, 3px, 20px 0)
    clear: both
    height: height
    margin: margin
    padding: 0
    border-width: 0 // remove excess on left, right
    border-top: 1px solid color_1
    border-bottom: 1px solid color_2

/*━━━━━━━━━━━━━━━━━━━━━━━━━━━━  SHADOWS  ━━━━━━━━━━━━━━━━━━━━━━━━━━━*/

shadow-corner(color, corner)
    // args: (#777, left/right/both)
    if corner is both

        position: relative
        &:before, &:after
            position: absolute
            bottom: 15px
            top: 80%
            width: 50%
            content: ''
            max-width:300px
            background: #777
            box-shadow: 0 15px 10px color
            z-index: -1
        &:before
            left: 10px
            transform(rotate(-3deg))
        &:after
            right: 10px
            left: auto
            transform(rotate(3deg))

    else if corner is left

        position: relative
        &:before
            position: absolute
            bottom: 15px
            left: 10px
            top: 80%
            width: 50%
            content: ''
            max-width:300px
            background: #777
            box-shadow: 0 15px 10px color
            z-index: -1
            transform(rotate(-3deg))

    else if corner is right

        position: relative
        &:after
            position: absolute
            bottom: 15px
            right: 10px
            left: auto
            top: 80%
            width: 50%
            content: ''
            max-width:300px
            background: #777
            box-shadow: 0 15px 10px color
            z-index: -1
            transform(rotate(3deg))

shadow-curve(color, side)
    // args: (rgba(0, 0, 0, 0.8), bottom/both)
    position: relative
    box-shadow: inset 0 1px 4px rgba(0, 0, 0, 0.3), 0 0 40px rgba(0, 0, 0, 0.1)

    if side is both

        &:before, &:after
            position: absolute
            content: ''
            box-shadow: 0 0 20px color
            top: 0
            bottom: 0
            left: 10px
            right: 10px
            border-radius: 500px / 10px
            z-index: -1

            &:after
                right: 10px
                left: auto
                transform(skew(8deg) rotate(3deg))

    else if side is bottom

        &:before, &:after
            position: absolute
            content: ''
            box-shadow: 0 0 20px color
            top: 50%
            bottom: 0
            left: 10px
            right: 10px
            border-radius: 500px / 10px
            z-index: -1

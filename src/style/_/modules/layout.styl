// NATIVE
// Default structural elements.

html
    height: 100%
    overflow-x: hidden
    overflow-y: scroll

body
    display: flex
    flex-flow: column wrap
    min-height: 100vh
    color: _default
    background: _background

header
    color: _header

main
    flex: 1
    width: 100%
    display: flex
    flex-wrap: wrap
    align-content: flex-start

footer
    color: _footer

// CUSTOM
// Extended structural vocabulary with semantic identifiers.

.canvas
    width: 100%
    display: flex
    position: relative
    flex-wrap: wrap
    align-items: center
    justify-content: center
    overflow: hidden

.content
    width: c_x
    display: flex
    flex-wrap: wrap
    min-width: c_x_min
    +min(1)
        width: b1_c_x
    +min(2)
        width: b2_c_x
        min-width: b2_c_x_min
    +min(3)
        width: b3_c_x
        min-width: b3_c_x_min
